CREATE TABLE IF NOT EXISTS resources (
    id INT AUTO_INCREMENT PRIMARY KEY,
    title VARCHAR(255),
    description TEXT
);

CREATE TABLE IF NOT EXISTS resource_comments (
    id INT AUTO_INCREMENT PRIMARY KEY,
    resource_id INT,
    user_id INT,
    comment TEXT,
    FOREIGN KEY (resource_id) REFERENCES resources(id),
    FOREIGN KEY (user_id) REFERENCES users(id)
);
